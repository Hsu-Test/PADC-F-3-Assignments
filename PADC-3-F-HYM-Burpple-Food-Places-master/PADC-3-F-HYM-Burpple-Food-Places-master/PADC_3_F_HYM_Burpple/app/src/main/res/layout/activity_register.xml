<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#045FB4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_signup_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="Sign up form"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_big" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_signup_form"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2">

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textColorHint="@color/white_full"
                android:textSize="@dimen/normal_text_size" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_last_name"
            style="@style/register_form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_first_name">

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_email"
            style="@style/register_form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_last_name">

            <EditText
                android:id="@+id/et_email"
                style="@style/register_form_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mail@example.com" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_phone_no"
            style="@style/register_form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_email">

            <EditText
                android:id="@+id/et_phone_no"
                style="@style/register_form_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please enter a phone number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_password"
            style="@style/register_form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_phone_no">

            <EditText
                android:id="@+id/et_password"
                style="@style/register_form_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_confirm_password"
            style="@style/register_form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_password">


            <EditText
                android:id="@+id/et_confirm_password"
                style="@style/register_form_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Confirm Password" />
        </android.support.design.widget.TextInputLayout>


        <CheckBox
            android:id="@+id/cb_terms_and_policy"
            style="@style/register_form_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_confirm_password"

            android:buttonTint="@color/white_full"
            android:text="I agree to Terms and Privacy Policy"
            android:textColor="@color/white_full" />

        <Button
            android:id="@+id/btn_to_signup"
            style="@style/register_form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_terms_and_policy"
            android:background="@color/primary"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="@dimen/text_regular_2x" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>